<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:layout_constraintWidth_percent="0.5">

    <EditText
        android:id="@+id/et_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:focusable="true"
        android:textColor="#00000000"
        app:layout_constraintTop_toTopOf="@id/vg_pin"
        app:layout_constraintStart_toStartOf="@id/vg_pin"
        app:layout_constraintEnd_toEndOf="@id/vg_pin"
        app:layout_constraintBottom_toBottomOf="@id/vg_pin" >

        <requestFocus />

    </EditText>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="vg_pin"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/pin_01"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pin_02"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_02"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_01"
            app:layout_constraintEnd_toStartOf="@id/pin_03"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_03"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_02"
            app:layout_constraintEnd_toStartOf="@id/pin_04"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_04"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_03"
            app:layout_constraintEnd_toStartOf="@id/pin_05"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_05"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_04"
            app:layout_constraintEnd_toStartOf="@id/pin_06"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_06"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>