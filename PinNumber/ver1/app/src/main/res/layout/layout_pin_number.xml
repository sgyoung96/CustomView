<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:layout_constraintWidth_percent="0.5">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="vg_pin"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="vg_number"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/pin_01"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pin_02"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_02"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_01"
            app:layout_constraintEnd_toStartOf="@id/pin_03"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_03"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_02"
            app:layout_constraintEnd_toStartOf="@id/pin_04"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_04"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_03"
            app:layout_constraintEnd_toStartOf="@id/pin_05"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_05"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_04"
            app:layout_constraintEnd_toStartOf="@id/pin_06"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/pin_06"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_star_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/pin_05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <TextView
            android:id="@+id/number_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/number_04"
            app:layout_constraintEnd_toStartOf="@id/number_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number_02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_05"
            app:layout_constraintEnd_toStartOf="@id/number_03"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_01"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number_03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="3"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_06"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_02"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/number_04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/number_07"
            app:layout_constraintEnd_toStartOf="@id/number_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_01" />

        <TextView
            android:id="@+id/number_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="5"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_08"
            app:layout_constraintEnd_toStartOf="@id/number_03"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_01"
            app:layout_constraintTop_toBottomOf="@+id/number_02" />

        <TextView
            android:id="@+id/number_06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_09"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_02"
            app:layout_constraintTop_toBottomOf="@+id/number_03" />

        <TextView
            android:id="@+id/number_07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="7"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/number_blank"
            app:layout_constraintEnd_toStartOf="@id/number_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_04" />

        <TextView
            android:id="@+id/number_08"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_0"
            app:layout_constraintEnd_toStartOf="@id/number_03"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_01"
            app:layout_constraintTop_toBottomOf="@+id/number_05" />

        <TextView
            android:id="@+id/number_09"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/number_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_02"
            app:layout_constraintTop_toBottomOf="@+id/number_06" />

        <TextView
            android:id="@+id/number_blank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/number_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_07" />

        <TextView
            android:id="@+id/number_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/number_03"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_01"
            app:layout_constraintTop_toBottomOf="@+id/number_08" />

        <TextView
            android:id="@+id/number_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="back"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/number_02"
            app:layout_constraintTop_toBottomOf="@+id/number_09" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>