<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_num_pad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_num_01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_num_02"
            app:layout_constraintBottom_toTopOf="@id/tv_num_04"/>

        <TextView
            android:id="@+id/tv_num_02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_01"
            app:layout_constraintStart_toEndOf="@id/tv_num_01"
            app:layout_constraintEnd_toStartOf="@id/tv_num_03"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_01"/>

        <TextView
            android:id="@+id/tv_num_03"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_01"
            app:layout_constraintStart_toEndOf="@id/tv_num_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_01"/>

        <TextView
            android:id="@+id/tv_num_04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/tv_num_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_num_02"
            app:layout_constraintBottom_toTopOf="@id/tv_num_07"/>

        <TextView
            android:id="@+id/tv_num_05"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_04"
            app:layout_constraintStart_toEndOf="@id/tv_num_01"
            app:layout_constraintEnd_toStartOf="@id/tv_num_03"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_04"/>

        <TextView
            android:id="@+id/tv_num_06"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_04"
            app:layout_constraintStart_toEndOf="@id/tv_num_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_04"/>

        <TextView
            android:id="@+id/tv_num_07"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/tv_num_04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_num_02"
            app:layout_constraintBottom_toTopOf="@id/tv_random"/>

        <TextView
            android:id="@+id/tv_num_08"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_07"
            app:layout_constraintStart_toEndOf="@id/tv_num_01"
            app:layout_constraintEnd_toStartOf="@id/tv_num_03"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_07"/>

        <TextView
            android:id="@+id/tv_num_09"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_num_07"
            app:layout_constraintStart_toEndOf="@id/tv_num_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_num_07"/>

        <TextView
            android:id="@+id/tv_random"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="random"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/tv_num_07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_num_02"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_num_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_random"
            app:layout_constraintStart_toEndOf="@id/tv_num_01"
            app:layout_constraintEnd_toStartOf="@id/tv_num_03"
            app:layout_constraintBottom_toBottomOf="@id/tv_random"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="delete"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#D3D3D3"
            app:layout_constraintTop_toTopOf="@id/tv_random"
            app:layout_constraintStart_toEndOf="@id/tv_num_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_random"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>